{
  "name": "flora-viewer",
  "version": "1.0.0",
  "description": "Flora Viewer with Forum",
  "private": true,
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/three": "^0.176.0",
    "chart.js": "^4.4.9",
    "framer-motion": "^12.10.5",
    "gsap": "^3.13.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "three": "^0.176.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "concurrently \"npm run start:main\" \"npm run start:forum\"",
