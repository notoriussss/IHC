{
  "name": "flora-viewer",
  "version": "1.0.0",
  "description": "Flora Viewer with Forum",
  "private": true,
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/three": "^0.176.0",
    "chart.js": "^4.4.9",
    "framer-motion": "^12.10.5",
    "gsap": "^3.13.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "three": "^0.176.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "concurrently": "^8.2.2",
    "serve": "^14.2.1"
  },
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json",
    "clean:all": "npm run clean && cd foro && rm -rf node_modules package-lock.json",
    "install:all": "npm install && cd foro && npm install && npm install --save-dev vite @vitejs/plugin-react && npm install axios @types/axios --save",
    "start": "concurrently \"npm run start:main\" \"npm run start:forum\"",
    "start:main": "serve -s build -l 3000",
    "start:forum": "cd foro && npm run start:prod",
    "build": "CI=false concurrently \"npm run build:main\" \"npm run build:forum\"",
    "build:main": "CI=false react-scripts build",
    "build:forum": "cd foro && npm install && npm install axios @types/axios --save && npm install @types/axios --save-dev && npm run build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.41",
    "@types/gsap": "^1.20.2"
  }
}
